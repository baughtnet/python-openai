#chat-form {
  display: flex;
  align-items: center;
  padding: 10px;
}

#model-select {
  padding: 5px;
  margin-right: 10px;
  max-width: 125px;
  border: 1px solid #ddd;
  background-color: #444;
  color: #ddd;
}

#user-input {
  flex: 1;
  padding: 5px;
  margin-right: 10px;
  border: 1px solid #ddd;
  background-color: #444;
  color: #ddd;
  font-size: 16px;
}

#send-button {
  padding: 5px 10px;
  border: none;
  background-color: #007bff;
  color: #fff;
  cursor: pointer;
}

#chat-history pre {
    border: 1px solid #ddd;
    border-left: 5px solid #a30000;
    max-width: 85vh;
    padding: 1em;
    overflow: auto;
    font-family: "SauceCodePro", monospace;
    white-space: pe-wrap;
    word-break: break-all;
    line-height: 1.5;
}

#chat-history code {
    color: #678541;;
    padding: 3px;
    font-size: 0.95em;
}

#chat-history p {
    margin: 5px;
    padding: 5px;
}

#chat-history ol {
    display: block;
    margin: 5px;
    margin-left: 50px;
    padding: 5px;
}
