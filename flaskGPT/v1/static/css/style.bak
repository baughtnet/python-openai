/* CSS HEX */
--fern-green: #678541;
--pumpkin: #ff8132;
--eerie-black: #17191b;
--cambridge-blue: #6a9589;
--indigo-dye: #2d4f67;
--red-cmyk: #e82424;
--silver: #aeaeae;
--white: #fdfdfd;

body {
  font-family: "MesloLGS Nerd Font", "DejaVu Sans Mono", "Liberation Mono", "Consolas", "Monaco", "Courier New", "Courier", "monospace";
  background-color: #27342B;
  color: #aeaeae;
  margin: 0;
  padding: 20px;
}

#title {
    margin: 0px;
    padding: 0px;
    color: #678541;
    height: 3rem;
    font-family: 'Source Code Pro', monospace;
    font-size: xxx-large;
    font-style: bold;
}

#chat-container {
  width: 90%;   /* Corrected value to include unit */
  margin: 0 auto;
  background-color: #aeaeae; 
  border: 1px solid #e82424; 
  border-radius: 5px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  border-radius: 15px;
}

.chat-header {
  padding: 10px;
  text-align: center;
  font-size: .75em;
}

#chat-history {
  min-height: 300px;
  max-height: 65vh;
  max-width: auto;
  overflow-y: scroll;
  padding: 10px;
  margin: 20px;
  border: 1px solid #678541; 
  border-radius: 5px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  background-color: #17191b; 
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 10px;
  border-radius: 12px;
}

#chat-history .user-message {
    background-color: #;
    font-family: "Ubuntu", sans-serif;
    font-weight: 500;
    color: #ff8132;
    border: 2px solid #315603;
    border-left: 5px solid #007bff;
    border-top-right-radius: 7.7px;
    font-style: bold;
    font-size: 22px;
    margin: 10px;
    padding: 10px;
}

#chat-history .assistant-message {
    background-color: #17191b;
    color: #aeaeae;
    font-family: 'Ubuntu', sans-serif;
    font-weight: 400;
    font-size: 18px;
    border: 2.5px solid #aeaeae;
    border-radius: 10px;
    padding: 25px;
    margin: 7.5px;
}

#chat-history .user-message strong {
  color: #007bff;
  font-weight: 800;
  padding: 3px;
  margin: 5px;
  margin-left: 0px;
  background-color: #aeaeae;
  border-radius: 7.5px;
  color: #17191b;
  font-size: 24px;
}

#chat-history .assistant-message strong {
  font-weight: 800;
  padding: 5px;
  margin: 5px;
  background-color: #aeaeae;
  border-top-right-radius: 7.5px;
  color: #17191b;
  font-size: 24px;
}

#chat-history strong {
    font-weight: bold;
    font-size: 22px;
    width: 100%;
}
